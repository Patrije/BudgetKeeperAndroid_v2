<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.example.pati.BudgetKeeperAndroid.view.MainActivity"
    android:background="@drawable/theme_cash">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your budget "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your budget "
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/title"
                android:background="@drawable/rounded_shape"
                android:textAlignment="center"
                />
           <com.github.mikephil.charting.charts.LineChart
               android:id="@+id/bar_chart"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_below="@+id/budget"
               android:layout_marginTop="15dp">

           </com.github.mikephil.charting.charts.LineChart>

<RelativeLayout
    android:id="@+id/buttons_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/bar_chart"
    android:layout_marginTop="30dp">
            <Button
                android:id="@+id/ask_button"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Ask for additional cash"
                android:background="@drawable/rounded_shape"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:id="@+id/expense_button"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Raport expenditure"
                android:layout_below="@+id/ask_button"
                android:background="@drawable/rounded_shape"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                style="@style/AppTheme.RoundedCornerMaterialButton"/>
            <Button
                android:id="@+id/income_button"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Raport income"
                android:layout_below="@+id/expense_button"
                android:background="@drawable/rounded_shape"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                style="@style/AppTheme.RoundedCornerMaterialButton"/>
            <Button
                android:id="@+id/history_button"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/income_button"
                android:text="History"
                android:background="@drawable/rounded_shape"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                style="@style/AppTheme.RoundedCornerMaterialButton"/>
</RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
